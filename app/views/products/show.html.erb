<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
        <%= form_for :review, url: product_reviews_path(@product) do |f| %>
        <dl class="dl-horizontal">
          <dt>Add a review:</dt>
          <dd></dd>
          <dt><%= f.label :rating %></dt>
          <dd><%= f.select(:rating, [1,2,3,4,5])  %></dd>
          <dt><%= f.label :description %></dt>
          <dd><%= f.text_area :description %></dd>
          <dt></dt>
          <dd><%= f.submit("Create review") %></dd>
        </dl>
        <% end %>
      </div>

      <div class="col-sm-8">
         <dl class="dl-horizontal">
           <dt> Reviews </dt>
           <% @reviews.each do |c| %>
           <dd><%= c.user.name %> : <%= c.description %>
            <% c.rating.times do  %>
              <span class="glyphicon glyphicon-star text-danger"></span>
            <% end %>
           </dd>

           <% end %>

         </dl>
       </div>

    </div>

  </article>

</section>
